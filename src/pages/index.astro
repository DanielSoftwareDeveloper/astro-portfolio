---
import Title from "../components/ui/Title.astro";
import Layout from "../layouts/Layout.astro";
import AppSkills from "../components/skills/AppSkills.astro";
import Slider from "../components/ui/Slider.astro";
---

<Layout title="Welcome to Astro.">
  <section class="">
    <Title title="About" />
    <div class="grid md:grid-cols-2 gap-6 md:gap-8">
      <div class="">
        <h1 class="text-xl font-bold">Daniel Reyes</h1>
        <h2 class="text-lg font-bold text-color-1">Software Developer</h2>
        <p class="my-4">
          I am a Software developer living in Jalisco Mexico. <span
            class="text-color-1">My training is in web development</span
          >, my primary interest is create functional software for the real
          world. I think that one of the essential goals of our generation is to
          understand how works technology.
        </p>
        <div class="flex space-x-3">
          <button class="button">Download CV</button>
          <button class="button">Contact</button>
        </div>
      </div>
      <a href="/portfolio">
        <Slider />
      </a>
    </div>
  </section>
  <hr class="border-neutral-600 my-10" />
  <section class="">
    <Title title="Skills" />
    <AppSkills />
    <div class=""></div>
  </section>
</Layout>
