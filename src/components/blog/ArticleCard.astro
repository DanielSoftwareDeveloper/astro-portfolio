---
interface Props {
    image: string;
    name: string;
}
const { image, name } = Astro.props;
---

<div class="bg-neutral-700 p-3.5 md:p-4 rounded-lg">
    <a href="/" class="">
        <img
            src={image}
            alt={name}
            class="w-full h-44 md:h-48 lg:h-52 object-cover rounded-lg mb-4 hover:opacity-85 transition-opacity duration-150"
        />
    </a>
    <div class="flex flex-col">
        <h3 class="font-semibold mb-3">{name}</h3>
        <button class="button">Read more</button>
    </div>
</div>
