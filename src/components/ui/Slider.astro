---
import { portfolioProjects } from "../../typescript/constants";
// import function to register Swiper custom elements
import { register } from "swiper/element/bundle";
// register Swiper custom elements
register();
---

<swiper-container
  slides-per-view="1"
  speed="500"
  loop="true"
  autoplay-delay="3500"
  effect="fade"
>
  {
    portfolioProjects.map((project) => (
      <swiper-slide>
        <img
          src={project.image}
          alt={project.name}
          class="w-full h-72 object-cover rounded-xl border-item"
        />
      </swiper-slide>
    ))
  }
</swiper-container>
