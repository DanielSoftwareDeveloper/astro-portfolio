---
import { Icon } from "astro-icon/components";

interface Props {
  icon: string;
  name: string;
}
const { icon, name } = Astro.props;
---

<div class="flex flex-col items-center justify-center">
  <div
    class="bg-neutral-700 w-14 h-14 rounded-full flex items-center justify-center"
  >
    <Icon class="" name={icon} size={30} />
  </div>
  <p class="text-sm font-semibold mt-2.5">{name}</p>
</div>
