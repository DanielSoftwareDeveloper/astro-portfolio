---
import SocialLinks from "../social/SocialLinks.astro";
import LanguagePicker from "../ui/LanguagePicker.astro";
import ThemeIcon from "../ui/ThemeIcon.astro";
import NavbarLinks from "./NavbarLinks.astro";
import Sidebar from "./_Sidebar";
---

<header
  class="bg-white dark:bg-neutral-800 md:bg-none h-16 md:h-0 sticky top-0 border-bottom md:border-none z-30"
>
  {/**/}
  <div class="content h-full flex items-center justify-between text-lg">
    <div class="hidden md:flex flex-1 justify-start"><SocialLinks /></div>
    <div class="md:flex flex-1 justify-center"><NavbarLinks /></div>
    <div class="flex items-center md:flex-1 md:justify-end space-x-6">
      <LanguagePicker />
      <ThemeIcon />
    </div>
    <div class="hidden items-center md:hidden"><Sidebar client:load /></div>
  </div>
</header>
